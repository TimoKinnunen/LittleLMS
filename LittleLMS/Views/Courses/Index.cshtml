@model IEnumerable<LittleLMS.LittleLMSModels.Course>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Lärare"))
{
    <h2>Kurser</h2>
}

@if (User.IsInRole("Elev"))
{
    <h6>@ViewBag.UserName</h6>
    <h2>@ViewBag.CourseName</h2>
    <h4>@ViewBag.CourseDescription</h4>
    <h4>@ViewBag.CourseInterval</h4>
}

<p>
    @if (User.IsInRole("Lärare"))
    {
        @Html.ActionLink("Lägg till ny", "Create")
    }
</p>
<table class="table">
    @if (User.IsInRole("Lärare"))
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) <span>|</span>
                    @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>*@
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }) <span>|</span>
                    @Html.ActionLink("Moduler", "Index", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>

<table class="table">
    @if (User.IsInRole("Elev"))
    {
        @Html.Label("Kursens moduler:")
        <p>@ViewBag.CourseName</p>

        foreach (var item in (IEnumerable<LittleLMS.LittleLMSModels.Module>)ViewBag.CourseModules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.ActionLink("Aktiviteter", "Index", new { moduleId = item.Id })
                </td>
            </tr>
        }
    }
</table>

<table class="table">
    @if (User.IsInRole("Elev"))
    {
        @Html.Label("Modulens aktiviteter:")
        <p>@ViewBag.ModuleName</p>

        foreach (var item in (IEnumerable<LittleLMS.LittleLMSModels.Activity>)ViewBag.ModuleActivities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
            </tr>
        }
    }
</table>

<table class="table">
    @if (User.IsInRole("Elev"))
    {
        @Html.Label("Dina kurskamrater:")

        foreach (var item in (IEnumerable<LittleLMS.Models.ApplicationUser>)ViewBag.CourseStudentMates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    }
</table>
