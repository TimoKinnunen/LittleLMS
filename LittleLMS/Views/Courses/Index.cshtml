@model IEnumerable<LittleLMS.LittleLMSModels.Course>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Lärare"))
{
    <h2>Kurser</h2>
}

@if (User.IsInRole("Elev"))
{
    <h2>Kurs</h2>
    <h2>@ViewBag.CourseName</h2>
}

<p>
    @if (User.IsInRole("Lärare"))
    {
        @Html.ActionLink("Lägg till ny", "Create")
    }
</p>
<table class="table">
    @if (User.IsInRole("Lärare"))
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @if (User.IsInRole("Lärare"))
                    {
                        @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) <span>|</span>
                        @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>*@
                        @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Moduler", "Index", "Modules", new { id = item.Id }, null)
                    }
                    @if (User.IsInRole("Elev"))
                    {
                        @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>
                            @Html.ActionLink("Moduler", "Index", "Modules", new { id = item.Id }, null)*@
                    }
                </td>
            </tr>
        }
    }
</table>

<table class="table">
    @if (User.IsInRole("Elev"))
    {
        @Html.Label("Moduler")

        foreach (var item in (IEnumerable<LittleLMS.LittleLMSModels.Module>)ViewBag.CourseModules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @if (User.IsInRole("Lärare"))
                    {
                        @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Moduler", "Index", "Modules", new { id = item.Id }, null)
                    }
                    @if (User.IsInRole("Elev"))
                    {
                        @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>
                            @Html.ActionLink("Moduler", "Index", "Modules", new { id = item.Id }, null)*@
                    }
                </td>
            </tr>
        }
    }
</table>

<table class="table">
    @if (User.IsInRole("Elev"))
    {
        @Html.Label("Activities")

        foreach (var item in (IEnumerable<LittleLMS.LittleLMSModels.Activity>)ViewBag.ModuleActivities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @if (User.IsInRole("Elev"))
                    {
                        @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id }) <span>|</span>
                            @Html.ActionLink("Moduler", "Index", "Modules", new { id = item.Id }, null)*@
                    }
                </td>
            </tr>
        }

    }
</table>
