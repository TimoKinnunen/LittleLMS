@model IEnumerable<LittleLMS.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Användare</h2>
<h5>Du lägger till elever till kursen på kursvyn.</h5>

<p>
    @Html.ActionLink("Lägg till ny lärare", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserName)*@
            @Html.Label("Användarnamn")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
