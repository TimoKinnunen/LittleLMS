@model IEnumerable<LittleLMS.LittleLMSModels.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Dokument</h2>

<p>
    @Html.ActionLink("Ladda upp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfRegistration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FeedbackFromTeacherToStudent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfRegistration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackFromTeacherToStudent)
            </td>
            <td>
                @Html.ActionLink("Ladda ner", "Download", new { id = item.Id }) |
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
