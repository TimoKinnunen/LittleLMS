@model IEnumerable<LittleLMS.LittleLMSModels.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Dokument</h2>

<p>
    @Html.ActionLink("Ladda upp", "UploadFile")
</p>
<p>
    @Html.ActionLink("Dokumenttyp", "Index", "DocumentTypes")
</p>
<p>
    @Html.ActionLink("Mottagartyp", "Index", "ReceiverTypes")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceiverType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadedByName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfRegistration)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedByName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfRegistration)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>*@
            <td>
                @Html.ActionLink("Ladda ner", "Download", new { id = item.Id }) |
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "DeleteDocument", new { id = item.Id })
            </td>
        </tr>
    }

</table>
